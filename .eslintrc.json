{
  "extends": "airbnb-base",
  "plugins": [
    "standard"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": 0,
    "func-names": 0,
    "function-paren-newline": 1,
    "comma-dangle": 1,
    "semi": 2,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ]
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "app": true,
    "td": true,
    "beforeEach": true,
    "before": true,
    "request": true,
    "Joi": true,
    "joiAssert": true
  }
}
